{
    "configurations": {
        "main":{
            "adapter": "debugpy",
            "configuration": {
                "name": "run the executable",
                "type": "python",
                "request": "launch",
                "python.pythonPath": "/usr/bin/python3",
                "program": "~/p/pydebugtest/main.py"
            },
            "breakpoints": {
                "exception": {
                  "raised": "N",
                  "caught": "N",
                  "uncaught": "Y",
                  "userUnhandled": "N"
                }
            }
        },
        "test":{
            "adapter": "debugpy",
            "configuration": {
                "name": "run the test",
                "module": "pytest",
                "type": "python",
                "request": "launch",
                "python.pythonPath": "/usr/bin/python3",
                "args": [
                  "-q",
                  "${file}"
                ]

            },
            "breakpoints": {
                "exception": {
                  "raised": "N",
                  "caught": "N",
                  "uncaught": "Y",
                  "userUnhandled": "N"
                }
            }
        }
    }
}

